<resources>
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_a_200</item>
        <item name="colorPrimaryVariant">@color/indigo_a_200</item>
        <item name="colorOnPrimary">@color/pure_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_a_200_25</item>
        <item name="colorSecondaryVariant">@color/indigo_a_200_25</item>
        <item name="colorOnSecondary">@color/dark_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/pure_black</item>
        <item name="colorSurface">@color/pure_white</item>
        <item name="colorOnBackground">@color/light_white</item>
        <item name="colorBackgroundFloating">?attr/colorPrimary</item>
        <item name="android:windowBackground">?attr/colorOnBackground</item>
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">@font/yekan_bakh_fa</item>
        <item name="fontFamily">@font/yekan_bakh_fa</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
</resources>