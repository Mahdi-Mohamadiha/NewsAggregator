<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/news_image_view"
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/news_details_sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-32dp"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_image_view" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/news_image_view"
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/news_details_sv"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/news_details_sv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_divider_view" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/news_details_sv" />


        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/content_view" />
            <KeyAttribute
                android:alpha="0.2"
                app:framePosition="20"
                app:motionTarget="@id/content_view" />
            <KeyAttribute
                android:alpha="0.4"
                app:framePosition="40"
                app:motionTarget="@id/content_view" />
            <KeyAttribute
                android:alpha="0.6"
                app:framePosition="60"
                app:motionTarget="@id/content_view" />
            <KeyAttribute
                android:alpha="0.8"
                app:framePosition="80"
                app:motionTarget="@id/content_view" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/content_view" />
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.3"
                app:framePosition="0"
                app:motionTarget="@id/status_bar_view" />
            <KeyAttribute
                android:alpha="0.5"
                app:framePosition="50"
                app:motionTarget="@id/status_bar_view" />
            <KeyAttribute
                android:alpha="0.7"
                app:framePosition="70"
                app:motionTarget="@id/status_bar_view" />
            <KeyAttribute
                android:alpha="0.9"
                app:framePosition="90"
                app:motionTarget="@id/status_bar_view" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="100"
                app:motionTarget="@id/status_bar_view" />
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="0"
                app:motionTarget="@id/toolbar_divider_view" />
            <KeyAttribute
                android:alpha="0.05"
                app:framePosition="50"
                app:motionTarget="@id/toolbar_divider_view" />
            <KeyAttribute
                android:alpha="0.1"
                app:framePosition="100"
                app:motionTarget="@id/toolbar_divider_view" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
