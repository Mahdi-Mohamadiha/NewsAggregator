<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".ui.main.home.HomeFragment">

    <LinearLayout
        android:id="@+id/home_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_distance"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/large_distance"
        android:paddingTop="@dimen/small_distance"
        android:paddingEnd="@dimen/large_distance"
        android:paddingBottom="@dimen/small_distance"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profile_image_view"
            android:layout_width="@dimen/touch_target_size"
            android:layout_height="@dimen/touch_target_size"
            app:riv_border_width="0dp"
            app:riv_corner_radius="@dimen/touch_target_size"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="?attr/colorPrimary"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/notification_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/notification_image_view"
                android:layout_width="@dimen/touch_target_size"
                android:layout_height="@dimen/touch_target_size"
                android:background="?attr/colorSurface"
                android:padding="@dimen/small_distance"
                android:src="@drawable/notification"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundPercent="1" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?attr/colorError"
                app:roundPercent="1" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small_distance"
        android:alpha="0.05"
        android:background="?attr/colorControlNormal"
        app:layout_constraintBottom_toTopOf="@+id/home_tab_layout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/medium_distance"
        android:background="?attr/colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_appbar"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabMode="fixed"
        app:tabSelectedTextColor="?attr/colorControlNormal"
        app:tabTextAppearance="@style/TabText" />

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.1"
        android:background="?attr/colorControlNormal"
        app:layout_constraintTop_toBottomOf="@+id/home_tab_layout" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_view" />

    <include
        android:id="@+id/error_layout"
        layout="@layout/error_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>
